!!! 5
%html
  %head
    %title= "TweetCompete Live :: Tweets"
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %link{ rel: "stylesheet", href: "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"}
    %link{ rel: "stylesheet", href: "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css" }
    %link{ rel: "stylesheet", href: "/css/site.css" }

  %body
    .jumbotron
      .container
        %h1
          %a{ href: "/"} TweetCompete Live
        %p
          Competition tweets

    .container
      .col-md-6
        %h2 Competition Tweets

        #tweets
          - @tweet_list.each do |tweet|
            .tweet
              .username= tweet.user.screen_name
              .tweet-content= tweet.text
              .time= tweet.created_at
              %a{ href: "/tweets/delete/#{tweet.id}", rel: "nofollow" }delete

      .col-md-6
        %h2 Add tweet
        %form{ method: "post" }
          %input{ type: "text", name: "tweet_id" }
          %input{ type: "submit", value: "add" }

        
    %script{ src: "//code.jquery.com/jquery.js" }
    %script{ src: "//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js" }
    %script{ src: "/js/twitter-compete.js" }